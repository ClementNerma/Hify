{
  "name": "hify-client",
  "version": "0.0.1",
  "description": "Client for Hify's frontend - a modern audio server",
  "author": "Cl√©ment Nerma <clement.nerma@gmail.com>",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "preview": "vite preview",
    "compile": "cross-env NODE_ENV=production vite build",
    "check": "svelte-check --output=human --tsconfig ./tsconfig.json && tsc --noEmit",
    "watch:svelte": "svelte-check --output=human --watch",
    "watch:ts": "tsc --noEmit --watch",
    "start": "run-p watch:* dev",
    "build": "run-s check compile",
    "serve": "sirv dist",
    "gql": "graphql-codegen --config codegen.yml",
    "format": "biome format ./src --write",
    "lint": "biome check ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@biomejs/cli-linux-x64": "^1.6.1",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-operations": "4.2.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "graphql-codegen-svelte-apollo": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "sirv-cli": "^2.0.2",
    "svelte-check": "^3.6.7",
    "svelte-preprocess": "^5.1.3",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0"
  },
  "dependencies": {
    "@apollo/client": "^3.9.6",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "svelte": "^4.2.12",
    "svelte-navigator": "^3.2.2",
    "valibot": "^0.30.0"
  }
}