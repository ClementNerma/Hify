{
  "name": "hify-client",
  "version": "0.0.1",
  "description": "Client for Hify's frontend - a modern audio server",
  "author": "Cl√©ment Nerma <clement.nerma@gmail.com>",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite --host",
    "compile": "cross-env NODE_ENV=production vite build",
    "check": "svelte-check --human --tsconfig ./tsconfig.json && tsc --noEmit",
    "watch:svelte": "svelte-check --human --watch",
    "watch:ts": "tsc --noEmit --watch",
    "start": "run-p watch:* dev",
    "build": "run-s check compile",
    "serve": "sirv dist",
    "codegen": "graphql-codegen --config codegen.yml",
    "format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
    "lint": "eslint './src/**/*.{js,ts,svelte}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
    "prelint": "npm run format"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.12.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/near-operation-file-preset": "^2.4.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "graphql-codegen-svelte-apollo": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte-check": "^2.9.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "svelte": "^3.50.1",
    "svelte-navigator": "^3.2.2"
  },
  "volta": {
    "node": "17.6.0"
  }
}