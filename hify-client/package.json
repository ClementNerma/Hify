{
  "name": "hify-client",
  "version": "0.0.1",
  "description": "Client for Hify's frontend - a modern audio server",
  "author": "Cl√©ment Nerma <clement.nerma@gmail.com>",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "compile": "cross-env NODE_ENV=production vite build",
    "check": "svelte-check --human --tsconfig ./tsconfig.json && tsc --noEmit",
    "watch:svelte": "svelte-check --human --watch",
    "watch:ts": "tsc --noEmit --watch",
    "start": "run-p watch:* dev",
    "build": "run-s check compile",
    "serve": "sirv dist",
    "gql": "graphql-codegen --config codegen.yml",
    "format": "rome format ./src --write",
    "lint": "rome check ./src"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "3.0.2",
    "@graphql-codegen/typescript-operations": "3.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "graphql-codegen-svelte-apollo": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "rome": "^11.0.0",
    "svelte-check": "^3.1.4",
    "svelte-preprocess": "^5.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "blurhash-wasm": "^0.2.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "svelte": "^3.57.0",
    "svelte-navigator": "^3.2.2"
  },
  "volta": {
    "node": "19.8.1"
  }
}
