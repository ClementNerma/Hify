{
  "name": "hify-client",
  "version": "0.0.1",
  "description": "Client for Hify's frontend - a modern audio server",
  "author": "Cl√©ment Nerma <clement.nerma@gmail.com>",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "compile": "cross-env NODE_ENV=production vite build",
    "check": "svelte-check --human --tsconfig ./tsconfig.json && tsc --noEmit",
    "watch:svelte": "svelte-check --human --watch",
    "watch:ts": "tsc --noEmit --watch",
    "start": "run-p watch:* dev",
    "build": "run-s check compile",
    "serve": "sirv dist",
    "codegen": "graphql-codegen --config codegen.yml",
    "format": "rome format ./src --write"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/near-operation-file-preset": "^2.4.4",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-operations": "2.5.10",
    "@sveltejs/vite-plugin-svelte": "^2.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "graphql-codegen-svelte-apollo": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "rome": "^11.0.0",
    "svelte-check": "^2.10.2",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-top-level-await": "^1.2.2",
    "vite-plugin-wasm": "^3.1.0"
  },
  "dependencies": {
    "@apollo/client": "^3.7.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "svelte": "^3.54.0",
    "svelte-navigator": "^3.2.2"
  },
  "volta": {
    "node": "19.2.0"
  }
}
