{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off"
			},
			"correctness": {
				"noVoidTypeReturn": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useEnumInitializers": "off"
			}
		},
		"ignore": ["src/graphql"]
	},
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					},
					"suspicious": {
						"noConfusingLabels": "off"
					}
				}
			}
		}
	]
}
